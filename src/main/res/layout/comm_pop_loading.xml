<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <win.zwping.code.review.PCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="70dp"
        android:minHeight="70dp"
        app:cardBackgroundColor="#cc000000"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:minWidth="70dp"
            android:minHeight="70dp">

            <win.zwping.code.review.PProgressBar
                android:id="@+id/loading_ppb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/comm_loading_anim"
                android:indeterminateOnly="true" />

            <win.zwping.code.review.PTextView
                android:id="@+id/loading_ptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loading_ppb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="加载中"
                android:textColor="#e9e9e9"
                android:textSize="13dp"
                android:visibility="gone" />

        </RelativeLayout>

    </win.zwping.code.review.PCardView>

</FrameLayout>