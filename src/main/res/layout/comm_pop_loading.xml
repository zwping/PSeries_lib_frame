<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_height="wrap_content">

    <win.zwping.code.review.PCardView android:layout_width="70dp"
                                      app:cardElevation="0dp"
                                      app:cardCornerRadius="5dp"
                                      app:cardBackgroundColor="#cc000000"
                                      android:layout_height="70dp">

        <win.zwping.code.review.PProgressBar android:layout_width="30dp" android:layout_height="30dp"
                                             android:indeterminateBehavior="repeat"
                                             android:indeterminateDrawable="@drawable/comm_loading_anim"
                                             android:layout_gravity="center"
                                             android:indeterminateOnly="true"/>

    </win.zwping.code.review.PCardView>

</FrameLayout>