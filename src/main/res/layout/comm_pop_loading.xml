<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

    <win.zwping.code.review.PCardView
            android:layout_width="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#cc000000"
            android:minHeight="70dp"
            android:minWidth="70dp"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:minWidth="70dp"
                android:minHeight="70dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <win.zwping.code.review.PProgressBar
                    android:id="@+id/loading_ppb"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/comm_loading_anim"
                    android:indeterminateOnly="true"/>

            <win.zwping.code.review.PTextView
                    android:id="@+id/loading_ptv"
                    android:layout_below="@id/loading_ppb"
                    android:layout_centerHorizontal="true"
                    android:text="加载中" android:textColor="#e9e9e9"
                    android:textSize="13dp" android:layout_marginTop="5dp"
                    android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:gravity="center" android:visibility="gone"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </RelativeLayout>

    </win.zwping.code.review.PCardView>

</FrameLayout>